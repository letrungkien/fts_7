<% provide(:title, "Question") %>
<h1>Show Questions</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_tag admin_questions_path, method: "get" do %>
      <div class="question-detail">  
        <%= label_tag :subject %>
        <%= select_tag "subject_id", 
          options_from_collection_for_select(@subjects, "id", "name", 
          selected: params[:subject_id]) %>
        <%= label_tag :level %>
        <%= select_tag "level_id", 
          options_from_collection_for_select(@levels, "id", "name", 
          selected: params[:level_id]) %>
      </div>
      <%= submit_tag "Show", class: "btn btn-large btn-primary" %>
      <%= submit_tag "Create", type:"button", id: "btn_create", 
        class: "btn btn-large btn-primary" %>
    <% end %>
    <% if @questions.present? %>
      <table class="exam-question-list">
        <tr>
          <th>Question ID</th>
          <th>Question Type</th>
          <th>Question</th>
          <th></th>
        </tr>
        <%= render @questions, question: @question %>
      </table>
    <% else %>
      <p><%= "There is currently no question!" %></p>
    <% end %>    
  </div>
</div>